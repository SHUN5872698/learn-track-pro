# .editorconfig
root = true

# 全ファイル共通設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP（PSR-2/PSR-12準拠）
[*.php]
indent_style = space
indent_size = 4

# Blade テンプレート（HTML慣習に合わせる）
[*.blade.php]
indent_style = space
indent_size = 2

# JavaScript/TypeScript/Vue.js
[*.{js,ts,vue}]
indent_style = space
indent_size = 2

# CSS/SCSS/Sass
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# 設定ファイル
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# 環境設定ファイル
[.env*]
indent_style = space
indent_size = 2
